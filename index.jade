                        p.login__error.hide Поле заполнено некорректно
                        form(action='#', method='get').form.login__register
                            input(type='text', name='tel-or-email', placeholder='Номер телефона или e-mail').input.form__item
                            input(type='submit', name='register-submit', value='Продолжить').btn.form__item
                        form(action='#', method='get').form.login__entry.hide
                            input(type='text', name='code', placeholder='_ _ _ _').input.form__item
                            input(type='submit', name='entry-submit', value='Продолжить').btn.form__item
